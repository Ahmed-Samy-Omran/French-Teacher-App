<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyFranchActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_father"
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:tag="father_en"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/father_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/father_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster"
        android:text="Father"
        android:textColor="#D2691E"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/card_view_father"
        app:layout_constraintStart_toStartOf="@+id/card_view_father"
        app:layout_constraintTop_toBottomOf="@+id/card_view_father" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_mother"
        android:layout_width="139dp"
        android:layout_height="139dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:tag="mother_en"

        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/father_tv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mother_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mother_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster"
        android:text="Mother"
        android:textColor="#D2691E"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/card_view_mother"
        app:layout_constraintStart_toStartOf="@+id/card_view_mother"
        app:layout_constraintTop_toBottomOf="@+id/card_view_mother" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_grand_mother"
        android:layout_width="139dp"
        android:layout_height="139dp"
        app:cardCornerRadius="16dp"

        app:cardElevation="4dp"
        android:tag="grand_mother_en"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mother_tv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/grand_mother_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/grand_mother_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster"
        android:text="Grand Mother"
        android:textColor="#D2691E"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/card_view_grand_mother"
        app:layout_constraintStart_toStartOf="@+id/card_view_grand_mother"
        app:layout_constraintTop_toBottomOf="@+id/card_view_grand_mother" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_grand_father"
        android:layout_width="139dp"
        android:layout_height="139dp"
        app:cardCornerRadius="16dp"
        android:tag="grand_father_en"
        app:cardElevation="4dp"

        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grand_mother_tv">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/grand_father_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/grand_father_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster"
        android:text="Grand Father"
        android:textColor="#D2691E"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/card_view_grand_father"
        app:layout_constraintStart_toStartOf="@+id/card_view_grand_father"
        app:layout_constraintTop_toBottomOf="@+id/card_view_grand_father" />


</androidx.constraintlayout.widget.ConstraintLayout>