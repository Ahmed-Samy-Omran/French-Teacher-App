<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ColorFranchActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_balck"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:tag="black_fr"
        android:onClick="SayTheColorFranch"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="105dp"
            android:layout_height="102dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="59dp"
            android:text="black"
            android:textColor="@color/white"
            android:fontFamily="@font/lobster"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_green"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:tag="green_fr"
        android:onClick="SayTheColorFranch"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_balck">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="59dp"
            android:text="Green"
            android:textColor="@color/white"
            android:fontFamily="@font/lobster"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_purple"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:tag="purple_fr"
        android:onClick="SayTheColorFranch"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_green">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="59dp"
            android:text="Purple"
            android:textColor="@color/white"
            android:fontFamily="@font/lobster"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_red"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:tag="red_fr"
        android:onClick="SayTheColorFranch"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_purple">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="59dp"
            android:text="Red"
            android:textColor="@color/white"
            android:fontFamily="@font/lobster"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_yellow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        android:onClick="SayTheColorFranch"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:tag="yellow_fr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_red">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="59dp"
            android:text="Yellow"
            android:textColor="@color/white"
            android:fontFamily="@font/lobster"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>